{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "dev:debug": {
      "persistent": true,
      "cache": false
    },
    "dev:info": {
      "persistent": true,
      "cache": false
    },
    "lint": {
      "outputs": []
    },
    "type-check": {
      "dependsOn": ["^check-types"]
    },
    "quality": {
      "dependsOn": ["build"],
      "outputs": []
    }
  }
}
