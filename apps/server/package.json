{
  "name": "server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "tsc --noEmit && wrangler deploy --outdir=dist",
    "dev": "wrangler dev --var LOG_LEVEL:info --inspector-port=9229",
    "_start_servers_for_pwa_test": "wrangler dev --var LOG_LEVEL:info --inspector-port=9229",
    "dev:debug": "wrangler dev --var LOG_LEVEL:debug --inspector-port=9229",
    "dev:info": "wrangler dev --var LOG_LEVEL:info --inspector-port=9229",
    "deploy": "wrangler deploy",
    "lint": "eslint",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.1.11",
    "@neondatabase/serverless": "^0.7.2",
    "@openauthjs/openauth": "^0.4.3",
    "@repo/dataforge": "workspace:*",
    "@repo/sync-types": "workspace:*",
    "better-auth": "^1.2.7",
    "hono": "^4.7.7",
    "kysely": "^0.27.0",
    "kysely-neon": "^1.0.0",
    "pg": "^8.15.6",
    "typeorm": "^0.3.22",
    "valibot": "^1.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2",
    "wrangler": "^4.14.0"
  }
}
