{
  "name": "vibestack",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo run dev --filter=./apps/web --filter=./apps/server --filter=./apps/openauth",
    "dev:debug": "turbo run dev:debug --filter=./apps/web --filter=./apps/server --filter=./apps/openauth",
    "dev:info": "turbo run dev:info --filter=./apps/web --filter=./apps/server",
    "dev:web": "turbo run dev --filter=./apps/web",
    "dev:web:debug": "turbo run dev:debug --filter=./apps/web",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "quality": "pnpm --filter @repo/code-quality build && pnpm --filter @repo/code-quality quality",
    "prebuild": "pnpm quality",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "preinstall": "npx only-allow pnpm"
  },
  "devDependencies": {
    "@repo/code-quality": "workspace:*",
    "@repo/eslint-config": "workspace:*",
    "eslint": "^9.25.1",
    "prettier": "^3.5.3",
    "turbo": "^2.5.2",
    "typescript": "~5.8.3"
  },
  "packageManager": "pnpm@8.9.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/config/*"
  ],
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.3.0",
    "@electric-sql/pglite-react": "^0.2.18",
    "@electric-sql/pglite-repl": "^0.2.18",
    "hono": "^4.7.8",
    "tailwindcss": "^4.1.4"
  }
}
