{
  "include": ["src/**/*.ts", "src/v2/core/entity-changes/old/.batch-changes.bak"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "moduleDetection": "force",
    "declaration": true,
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": false,
    "noEmit": true
  }
} 