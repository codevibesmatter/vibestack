{
  "name": "@repo/sync-test",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "prebuild": "pnpm clean",
    "test": "tsx src/scenarios/initial-sync.ts",
    "test:initial": "tsx src/scenarios/initial-sync.ts",
    "test:catchup": "tsx src/scenarios/catchup-sync.ts",
    "test:changes": "tsx src/scenarios/client-changes.ts",
    "test:live": "tsx src/scenarios/live-sync/index.ts",
    "test:all": "pnpm test:initial && pnpm test:catchup && pnpm test:changes && pnpm test:live",
    "test:init": "tsx src/scenarios/init-replication.ts",
    "test:db-init": "tsx src/scenarios/db-init-test.ts",
    "test:wal-batch": "tsx src/scenarios/wal-batch-test.ts",
    "seed": "tsx src/seed/seed-cli.ts",
    "seed:small": "tsx src/seed/seed-cli.ts -- --size=small --clear=true",
    "seed:medium": "tsx src/seed/seed-cli.ts -- --size=medium --clear=true",
    "seed:large": "tsx src/seed/seed-cli.ts -- --size=large --clear=true",
    "dev": "tsx src/index.ts",
    "watch": "tsx --watch src/index.ts"
  },
  "dependencies": {
    "@faker-js/faker": "^8.4.1",
    "@neondatabase/serverless": "^0.7.2",
    "@repo/dataforge": "workspace:*",
    "@repo/sync-types": "workspace:*",
    "@types/node-fetch": "^2.6.12",
    "dotenv": "^16.4.7",
    "inquirer": "^9.2.14",
    "node-fetch": "^3.3.2",
    "typeorm": "^0.3.20",
    "uuid": "^9.0.1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@types/inquirer": "^9.0.7",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.5.10",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.3.3"
  }
}